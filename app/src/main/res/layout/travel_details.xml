<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/travel_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:id="@+id/travel_details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/travel_details_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/travel_details_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/travel_passengers_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Passengers:"
        />
    <ListView
        android:id="@+id/pass_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    </ListView>

    <Button
        android:id="@+id/ReserveTravelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reserve_travel"
        android:layout_alignParentTop="true"
        android:textSize="15sp" android:textStyle="bold" />
    <Button
        android:id="@+id/RemoveTravelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove your reservation"
        android:layout_alignParentTop="true"
        android:textSize="15sp" android:textStyle="bold" />

</LinearLayout>